rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - user owns their data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Carts collection (subcollection under users)
    match /users/{userId}/carts/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Favorites collection (subcollection under users)
    match /users/{userId}/favorites/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Optional: Public products collection (if you store products in Firestore)
    match /products/{productId} {
      allow read: if true;  // Everyone can read products
      allow write: if false; // No one can write (admin only if needed)
    }
  }
}
